<script type="text/javascript">
        $(document).ready(function () {
            $('.app-header__mobile-menu').click(function () {
                $('.app-header__top-bar__mobile').toggle();
            });
            $('.app-header__top-bar__mobile .mobile-menu__item[data-sublist="true"]').click(function () {
                var sublist = $(this).siblings('.sublist');
                var subClassName = 'mobile-menu__' + sublist.attr('data-level') + '--active';
                var activeClassName = 'mobile-menu__item--active-' + $(this).attr('data-level');

                if (!sublist.hasClass(subClassName)) {
                    // show this
                    sublist.addClass(subClassName);
                    $(this).addClass(activeClassName);
                } else {
                    // hide this
                    sublist.removeClass(subClassName);
                    $(this).removeClass(activeClassName);
                }

                return false;
            });
        });
</script>
